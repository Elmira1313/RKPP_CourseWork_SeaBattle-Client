<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="30" style="-fx-background-color: #1e1e2e;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.battleship.client.controller.LobbyController">
    <padding><Insets bottom="50" left="50" right="50" top="50" /></padding>

    <Label style="-fx-font-size: 40px; -fx-text-fill: #89b4fa; -fx-font-weight: bold" text="Морской бой" />
    <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-text-fill: #cdd6f4;" />

    <VBox alignment="CENTER" spacing="20">
        <Button onAction="#onNewGame" style="-fx-background-color: #a6e3a1; -fx-font-size: 18px; -fx-pref-width: 300; -fx-pref-height: 60;" text="Новая игра" />
        <Button onAction="#onContinue" style="-fx-background-color: #f9e2af; -fx-font-size: 18px; -fx-pref-width: 300; -fx-pref-height: 60;" text="Продолжить сохранённую" />
      <Separator prefWidth="200.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin></Separator>
        <Button onAction="#onLogout" style="-fx-background-color: #f38ba8; -fx-font-size: 18px; -fx-pref-width: 300; -fx-pref-height: 60;" text="Сменить аккаунт" />
        <Button onAction="#onExit" style="-fx-background-color: #f38ba8; -fx-font-size: 18px; -fx-pref-width: 300; -fx-pref-height: 60;" text="Закрыть игру" />
    </VBox>

    <Label fx:id="statusLabel" minHeight="30" style="-fx-text-fill: #f38ba8;" />
</VBox>
